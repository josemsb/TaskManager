<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Estilos de fondo -->
    <style name="StyleActivity">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Estilos de Appbar -->
    <style name="AppBarStyle">
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="TextAppBar">
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20dp</item>
    </style>


    <!-- Estilos de Appbar Secundarios-->
    <style name="AppBarStyleSecondary">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageList">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="TextListSelector">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextTitleDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="TextDateDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="TextAppBarSpinner">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="TextTaskTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="TextTitleDescription">
        <item name="android:textColor">#9C2C2B2B</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextButtonDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>

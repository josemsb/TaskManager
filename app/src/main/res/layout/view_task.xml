<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="5dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTaskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarea 01"
                android:layout_marginBottom="5dp"
                style="@style/TextTaskTitle"/>

            <TextView
                android:id="@+id/txtTaskDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n"
                android:layout_marginBottom="5dp"
                style="@style/TextTitleDescription"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgAlarmTaskNew"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/alarm"
                    android:tint="@color/colorPrimary"/>

                <ImageView
                    android:id="@+id/imgDateTaskNew"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calendar"
                    android:tint="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/txtDateTaskNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16 Mayo"
                    android:paddingTop="3dp"
                    style="@style/TextTitleDialog"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
